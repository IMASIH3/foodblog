<p id="notice"><%= notice %></p>

<h1>Receipes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ingredient</th>
      <th>Direction</th>
      <th>Preparation time</th>
      <th>Cooking time</th>
      <th>Servings</th>
      <th>Category</th>
      <th>Picture</th>
      <th>Created by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receipes.each do |receipe| %>
      <tr>
        <td><%= receipe.name %></td>
        <td><%= receipe.ingredient %></td>
        <td><%= receipe.direction %></td>
        <td><%= receipe.preparation_time %></td>
        <td><%= receipe.cooking_time %></td>
        <td><%= receipe.servings %></td>
        <td><%= receipe.category %></td>
        <td><%= receipe.picture %></td>
        <td><%= receipe.created_by %></td>
        <td><%= link_to 'Show', receipe %></td>
        <td><%= link_to 'Edit', edit_receipe_path(receipe) %></td>
        <td><%= link_to 'Destroy', receipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Receipe', new_receipe_path %>
